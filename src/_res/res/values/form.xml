<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Form"/>

    <style name="Form.Container" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/_bg</item>
        <item name="android:paddingLeft">@dimen/l_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/l_padding_horizontal</item>
    </style>
    <style name="Form.tv_title">
        <!--<item name="android:textSize">@dimen/txt_content</item>-->
        <item name="android:textColorHint">@color/textColorSecondary</item>
        <item name="android:gravity">center_vertical|start|left</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:maxWidth">@dimen/opt_title_max_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/txt_content</item>
    </style>
    <style name="Form.tv_content" >
        <item name="android:gravity">end|center_vertical</item>
        <!--<item name="android:paddingRight">@dimen/l_padding_horizontal</item>-->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">4</item>
    </style>
</resources>