<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Opt"/>
    <style name="Opt.img_prompt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/l_margin_horizontal_larger</item>
        <item name="android:layout_marginBottom">@dimen/l_margin_horizontal_larger</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Opt.Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/l_padding_small</item>
        <item name="android:paddingBottom">@dimen/l_padding_small</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>
    <style name="Opt.iv_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/l_margin_horizontal</item>
    </style>
    <style name="Opt.tv_title">
        <item name="android:gravity">center_vertical|start|left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/opt_title_min_width</item>
        <!--<item name="android:maxWidth">@dimen/form_title_max_width</item>-->
        <!--<item name="android:layout_height">match_parent</item>-->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/txt_content</item>
    </style>
    <style name="Opt.et" parent="et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/l_margin_horizontal</item>
    </style>
    <style name="Opt.bt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bt_height</item>
        <item name="android:textColor">@color/bt_opt_txt_sl</item>
        <item name="android:background">@drawable/bt_opt_sl</item>
    </style>

</resources>