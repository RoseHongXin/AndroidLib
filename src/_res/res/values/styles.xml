<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="tab_theme_base" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="skb" parent="Base.Widget.AppCompat.SeekBar">
        <item name="android:max">100</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">2dp</item>
        <item name="android:isIndicator">false</item>
        <item name="android:progressDrawable">@drawable/pb_horizontal</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>
    
    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/_line</item>
    </style>
    <style name="vertical_line">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/_line</item>
    </style>

    <style name="et">
        <item name="android:textSize">@dimen/txt_et</item>
        <item name="android:textColorHint">@color/txt_content</item>
        <item name="android:gravity">center_vertical|start|left</item>
        <item name="android:textColor">@color/txt_title</item>
        <item name="android:background">@color/_bg</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PageContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start|center_horizontal</item>
        <item name="android:background">@color/_bg</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="PageContainer.Padding.Horizontal" parent="PageContainer">
        <item name="android:paddingLeft">@dimen/l_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/l_padding_horizontal</item>
    </style>
    <style name="PageContainer.Wrap" parent="PageContainer.Padding.Horizontal"/>
    <style name="PageContainer.Wrap.Padding" parent="PageContainer.Padding.Horizontal"/>
    <style name="PageContainer.Match" parent="PageContainer.Padding.Horizontal">
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="PageContainer.Match.Padding" parent="PageContainer.Match">
        <item name="android:paddingBottom">@dimen/l_padding_vertical</item>
        <item name="android:paddingTop">@dimen/l_padding_vertical</item>
    </style>

</resources>