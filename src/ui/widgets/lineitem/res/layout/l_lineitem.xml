<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/lineitem_container">

    <LinearLayout style="@style/lineitem_section" android:layout_alignParentLeft="true" android:layout_alignParentStart="true">
        <ImageView android:id="@+id/_iv_left" style="@style/lineitem_icon"
            android:layout_marginRight="@dimen/lineitem_gapLeft" android:layout_marginEnd="@dimen/lineitem_gapLeft"/>
        <TextView android:id="@+id/_tv_left" style="@style/lineitem_i" android:gravity="start" />
    </LinearLayout>

    <LinearLayout style="@style/lineitem_section" android:layout_alignParentRight="true" android:layout_alignParentEnd="true">
        <TextView android:id="@+id/_tv_right" style="@style/lineitem_i" android:gravity="end"
            android:layout_marginRight="@dimen/lineitem_gapRight" android:layout_marginEnd="@dimen/lineitem_gapRight" />
        <ImageView android:id="@+id/_iv_right" style="@style/lineitem_icon"  />
    </LinearLayout>

</RelativeLayout>