<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LineItem">
        <attr name="iconDrawable" format="reference"/>
        <attr name="titleText" format="reference|string"/>
        <attr name="intervalGap" format="dimension|reference"/>
        <attr name="paddingLeft" format="dimension|reference"/>
        <attr name="textSelector" format="reference"/>
        <attr name="itemSelector" format="reference"/>
        <attr name="textColor" format="reference"/>
        <attr name="textSize" format="dimension"/>
        <!--<attr name="textSize" format="reference"/>-->
    </declare-styleable>

    <dimen name="lineitem_padding_horizontal">12dp</dimen>
    <dimen name="lineitem_padding_vertical">6dp</dimen>

    <style name="lineitem_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/lineitem_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/lineitem_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/lineitem_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/lineitem_padding_vertical</item>
    </style>
    <style name="lineitem_l">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="lineitem_l2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="lineitem_r">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>