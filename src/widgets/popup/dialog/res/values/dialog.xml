<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dialog_base" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialog_container">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/_bg</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <!--<item name="android:paddingBottom">@dimen/l_padding_vertical</item>-->
        <item name="android:paddingTop">@dimen/l_padding_vertical</item>
        <!--<item name="android:paddingRight">@dimen/l_padding_horizontal</item>-->
        <!--<item name="android:paddingLeft">@dimen/l_padding_horizontal</item>-->
    </style>
    <style name="dialog_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_marginLeft">@dimen/l_margin_horizontal</item>-->
        <!--<item name="android:layout_marginRight">@dimen/l_margin_horizontal</item>-->
        <item name="android:textSize">@dimen/txt_title</item>
        <item name="android:textColor">@color/txt_title</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="dialog_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_marginLeft">@dimen/l_margin_horizontal</item>-->
        <!--<item name="android:layout_marginRight">@dimen/l_margin_horizontal</item>-->
        <item name="android:layout_marginTop">@dimen/l_margin_vertical</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="dialog_bt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/bt_height</item>
        <item name="android:textColor">#4AA0FF</item>
        <item name="android:gravity">center</item>
    </style>



